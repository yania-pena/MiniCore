<%- include ../layouts/cabecera.ejs %> 
<br/><br/>
<div class="card">
    <div class="card-header">
        CREACIÓN DE PASE
    </div>
    <div class="card-body">
        <h5 class="card-title">Datos de la Cita</h5>
        <p class="card-text"></p>
        <form action="/pases/guardar" method="post"> 
            <div class="mb-3">
                <label for="nombre" class="form-label">Usuario</label>
                <select name="nombre" id="nombre" class="form-select" tabindex="1"> 
                        <option value="" selected disabled hidden>Seleccione una opción</option>
                <% pases.forEach((usuario) => { %>
                    <option value="<%= usuario.id_usuario %>"> <%= usuario.nombre%> </option>
                <% }) %> 
            </select>
        </div>

            <div class="form-group">
                <label for="my-input">Fecha de Compra</label>
                <input id="my-input" class="form-control" type="date" name="fecha_compra">
            </div>
            <div class="form-group">
                <label for="my-input">Fecha de Expiración</label>
                <input id="my-input" class="form-control" type="date" name="expiracion">
            </div>

            <div class="form-group">
                <label for="my-input">Tipo de Pase</label>
                <input id="my-input" class="form-control" type="text" name="tipo_pase">
            </div>


        
            <button class="btn btn-success" type="submit">Guardar</button>
            <a class="btn btn-primary" href="http:/pases">Cancelar</a>
        </form>
    </div>
</div>


